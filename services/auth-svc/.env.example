# Database
DATABASE_URL=postgresql+asyncpg://auth_user:auth_pass@postgres:5432/auth_db
DB_SCHEMA=auth

# App
APP_NAME=auth-svc
ENV=development
LOG_LEVEL=info

# JWT
JWT_SECRET=CHANGE_ME_LONG_RANDOM
JWT_ISSUER=auth-svc
JWT_AUDIENCE=mi-mascota
ACCESS_TOKEN_TTL_SECONDS=900
REFRESH_TOKEN_TTL_SECONDS=1209600
REFRESH_COOKIE_NAME=refresh_token
REFRESH_COOKIE_SECURE=false
REFRESH_COOKIE_SAMESITE=Lax
REFRESH_COOKIE_DOMAIN=

# Redis
REDIS_URL=redis://localhost:6379/0

# Kafka
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
USER_REGISTERED_TOPIC=user.registered.v1

# SMTP (por seguridad, en prod usar secret manager)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@mi-mascota.test
SMTP_FROM_NAME=Mi Mascota
FRONTEND_URL=http://localhost:3000

# OTP settings
OTP_LENGTH=6
OTP_TTL_SECONDS=300
OTP_RESEND_COOLDOWN=60
MAX_OTP_ATTEMPTS=5

# Account locking
ACCOUNT_LOCK_THRESHOLD=10
ACCOUNT_LOCK_DURATION_MINUTES=30
